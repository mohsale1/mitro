<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dashboard Grid -->
            <androidx.cardview.widget.CardView
                android:id="@+id/grayCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#EDEDED"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="12dp">

                    <!-- CARD 1: Metro Map -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_map">

                            <ImageView
                                android:id="@+id/icon1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_map"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Metro Map"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Explore routes and stations"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 2: Station Info -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_station">

                            <ImageView
                                android:id="@+id/icon2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_station"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Station Info"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Details of nearby stations"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 3: Parking -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_parking">

                            <ImageView
                                android:id="@+id/icon3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_parking"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parking"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon3"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Find parking near stations"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title3"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 4: Payments -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_payments">

                            <ImageView
                                android:id="@+id/icon4"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_payment"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payments"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Recharge or pay fares"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 5: Feedback -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card5"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_feedback">

                            <ImageView
                                android:id="@+id/icon5"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_feedback"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Feedback"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Share your experience"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 6: Travel Guide -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card6"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_guide">

                            <ImageView
                                android:id="@+id/icon6"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_guide"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Travel Guide"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Tips for smooth travel"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 7: Nearest Metro -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card7"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_nearest">

                            <ImageView
                                android:id="@+id/icon7"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_location"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nearest Metro"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon7"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Locate closest station"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title7"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- CARD 8: Price Calculator -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card8"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_price">

                            <ImageView
                                android:id="@+id/icon8"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_price"
                                android:tint="#FFFFFF"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="16dp" />

                            <TextView
                                android:id="@+id/title8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price Calculator"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                app:layout_constraintTop_toBottomOf="@id/icon8"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:id="@+id/desc8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Estimate your fare"
                                android:textSize="12sp"
                                android:textColor="#DDDDDD"
                                android:layout_margin="12dp"
                                app:layout_constraintTop_toBottomOf="@id/title8"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>